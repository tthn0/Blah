<!DOCTYPE html>
<html lang="en" data-testing="<%= testing %>">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="/favicon/apple-touch-icon.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="/favicon/favicon-32x32.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="16x16"
      href="/favicon/favicon-16x16.png"
    />
    <link rel="manifest" href="/favicon/site.webmanifest" />
    <link
      rel="mask-icon"
      href="/favicon/safari-pinned-tab.svg"
      color="#5c9dff"
    />
    <link rel="shortcut icon" href="/favicon/favicon.ico" />
    <meta name="msapplication-TileColor" content="#000000" />
    <meta name="msapplication-config" content="/favicon/browserconfig.xml" />

    <title>Logs</title>
    <meta name="description" content="Logs" />

    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
      integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
      crossorigin="anonymous"
    />

    <meta
      name="theme-color"
      media="(prefers-color-scheme: light)"
      content="#08141a"
    />
    <meta
      name="theme-color"
      media="(prefers-color-scheme: dark)"
      content="#08141a"
    />
    <link rel="stylesheet" href="/css/global/navbar.css" />
    <link rel="stylesheet" href="/css/global/main.css" />
    <link rel="stylesheet" href="/css/pages/logs/main.css" />
    <link rel="stylesheet" href="/css/pages/logs/media-queries.css" />
    <link rel="stylesheet" href="/css/pages/logs/skeleton.css" />
    <link rel="stylesheet" href="/css/global/reset.css" />

    <script src="/js/logs/skeleton.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/logs/table.js"></script>
    <script async src="https://kit.fontawesome.com/05f03bc0ff.js"></script>
    <script src="/js/navbar/navbar.js"></script>
  </head>
  <body>
    <div class="mb-5"><%- include('partials/navbar.ejs') -%></div>

    <main>
      <section id="controls">
        <p id="search-text">Who are you searching for?</p>
        <p id="sort-text">Sort By</p>
        <p id="order-text">Order</p>
        <div id="search-container">
          <i class="fas fa-search"></i>
          <input
            type="text"
            placeholder="Name, role, PSID, etc."
            tabindex="1"
          />
        </div>
        <div id="column-container" class="dropdown-container">
          <i class="fa-solid fa-chevron-down"></i>
          <select id="sort-column" tabindex="2">
            <option value="name">Name</option>
            <option value="role">Role</option>
            <option value="psid">PSID</option>
            <option value="email">Email</option>
            <option value="discord">Discord</option>
            <option selected value="timestamp">Timestamp</option>
          </select>
        </div>
        <div id="order-container" class="dropdown-container">
          <i class="fa-solid fa-chevron-down"></i>
          <select id="sort-order" tabindex="3">
            <option value="0">Descending</option>
            <option value="1">Ascending</option>
          </select>
        </div>
        <button id="export" tabindex="4">Export JSON</button>
      </section>
      <section id="outer-table-container">
        <div id="inner-table-container">
          <table>
            <thead>
              <tr>
                <th>Name</th>
                <th>Role</th>
                <th>PSID</th>
                <th>Email</th>
                <th>Discord</th>
                <th>Timestamp</th>
                <th>
                  <!-- Empty to accomodate for trash icons -->
                </th>
              </tr>
            </thead>
            <tbody></tbody>
          </table>
        </div>
      </section>
      <section id="pagination">
        <p id="records">Loading...</p>
        <div id="record-size">
          <p>Showing</p>
          <div id="records-dropdown-container">
            <i class="fa-solid fa-caret-down"></i>
            <select id="logs-limit">
              <option value="100">100</option>
              <option value="250">250</option>
              <option value="500">500</option>
            </select>
          </div>
        </div>
      </section>
    </main>

    <script
      src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
      integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
      integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
      integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
