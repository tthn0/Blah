<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Main Page</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
      integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
      crossorigin="anonymous"
    />
    <script
      src="https://kit.fontawesome.com/e6a4cb6747.js"
      crossorigin="anonymous"
    ></script>
    <link rel="stylesheet" href="css/pages/register.css" />
    <link rel="stylesheet" href="css/global/navbar.css" />
  </head>

  <body>
    <%- include('partials/navbar.ejs') -%>

    <div class="split left">
      <div class="centered">
        <h1>REGISTER</h1>
        <form method="POST" action="/api/members">
          <i class="fa-solid fa-address-card mr-2"></i>
          <input
            class="mb-2 mt-2"
            type="text"
            name="psid"
            value=""
            placeholder="PSID"
          />
          <br />
          <i class="fa-solid fa-envelope mr-2"></i>
          <input
            class="mb-2"
            type="email"
            name="email"
            value=""
            placeholder="Email"
          />
          <br />
          <i class="fa-solid fa-lock mr-2"></i>
          <input
            class="mb-2"
            type="password"
            name="password"
            value=""
            placeholder="Password"
          />
          <br />
          <i class="fa-solid fa-user mr-2"></i>
          <input
            class="mb-2"
            type="text"
            name="first"
            value=""
            placeholder="First"
          />
          <br />
          <i class="fa-solid fa-user mr-2"></i>
          <input
            class="mb-2"
            type="text"
            name="last"
            value=""
            placeholder="Last"
          />
          <br />
          <i class="fa-brands fa-discord mr-2"></i>
          <input
            class="mb-4"
            type="text"
            name="discord"
            value=""
            placeholder="Discord Username"
          />
          <br />
          <input type="submit" /> <br />
        </form>
      </div>
    </div>

    <div class="split right d-none d-md-block"></div>

    <script
      src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
      integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
      integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
      integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
